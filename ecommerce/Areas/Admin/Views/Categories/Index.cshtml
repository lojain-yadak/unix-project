@using ecommerce.Models
@model List<Category>
<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model){
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a href="/Admin/Categories/Details/@item.Id" class="btn btn-outline-primary " >details</a>
                    <a href="/Admin/Categories/Edit/@item.Id" class="btn btn-outline-warning ">edit</a>
                    <a href="/Admin/Categories/Remove/@item.Id" class="btn btn-outline-danger " >delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>