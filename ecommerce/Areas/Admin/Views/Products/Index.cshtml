@using ecommerce.ViewModels
@model List<ProductsViewModel>
<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>

                <td>
                    @item.Price
                </td>
                <td>
                    @item.CategoryName
                </td>

                <td>
                    <img src="@item.ImageUrl" class="img-size-50" />
                </td>
                <td>
                    <a href="/Admin/Products/Details/@item.Id" class="btn btn-outline-primary ">details</a>
                    <a href="/Admin/Products/Edit/@item.Id" class="btn btn-outline-warning ">edit</a>
                    <a href="/Admin/Products/Remove/@item.Id" class="btn btn-outline-danger ">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>